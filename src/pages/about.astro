---
import Layout from '../layouts/BlogPost.astro';
import { getCollection } from 'astro:content';

const aboutPageContent = await getCollection('About'); // That About represents the  folder in content/About

// Assuming your content has the fields title, description, pubDate, and heroImage based on the schema you defined.
const { title, description, pubDate, heroImage, content } = aboutPageContent[0].data;
---
console.log(aboutPageContent);
<Layout
  title={title}
  description={description}
  pubDate={pubDate}
  heroImage={heroImage || "/default-image.jpg"} // Use a default image if none is provided
>
  <article>
    {content} <!-- Assuming your content body is rendered as "content" -->
  </article>
</Layout>
